{
  "scripts": {
    "start": "electron main.js"
    "build": "electron-builder"
  },

  "devDependencies": {
    "electron": "^28.0.0"
  },

  "build": {
    "appId": "your.app.id",
    "productName": "YourAppName",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "../src/**/*", 
      "../libs/**/*"      
    ],
    "mac": {
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["deb", "rpm"]
    }
  }
}



